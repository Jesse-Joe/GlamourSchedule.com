    <script>
        const isUserLoggedIn = <?= $isLoggedIn ? 'true' : 'false' ?>;
        const userSavedTheme = '<?= $userTheme ?? '' ?>';

        function toggleTheme() {
            const html = document.documentElement;
            const current = html.getAttribute('data-theme');
            const next = current === 'dark' ? 'light' : 'dark';
            html.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
            updateThemeUI(next);

            // Save to database if logged in
            if (isUserLoggedIn) {
                fetch('/api/theme', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ theme: next })
                }).catch(err => console.log('Theme save failed:', err));
            }
        }

        function updateThemeUI(theme) {
            const iconMenu = document.getElementById('themeIconMenu');
            const textMenu = document.getElementById('themeTextMenu');
            if (iconMenu && textMenu) {
                if (theme === 'dark') {
                    iconMenu.classList.remove('fa-moon');
                    iconMenu.classList.add('fa-sun');
                    textMenu.textContent = 'Licht thema';
                } else {
                    iconMenu.classList.remove('fa-sun');
                    iconMenu.classList.add('fa-moon');
                    textMenu.textContent = 'Donker thema';
                }
            }
        }

        // Theme initialization: user preference > localStorage
        (function initTheme() {
            // If user is logged in and has a saved preference, use that
            if (isUserLoggedIn && userSavedTheme) {
                document.documentElement.setAttribute('data-theme', userSavedTheme);
                localStorage.setItem('theme', userSavedTheme);
            } else {
                // Otherwise use localStorage
                const savedTheme = localStorage.getItem('theme');
                if (savedTheme) {
                    document.documentElement.setAttribute('data-theme', savedTheme);
                }
            }

            // Update UI after DOM loads
            document.addEventListener('DOMContentLoaded', function() {
                const currentTheme = document.documentElement.getAttribute('data-theme');
                updateThemeUI(currentTheme);
            });
        })();

        // Side Menu Functions (Website Version)
        function toggleSideMenu() {
            const menu = document.getElementById('sideMenu');
            const overlay = document.getElementById('sideMenuOverlay');
            menu.classList.add('active');
            overlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeSideMenu() {
            const menu = document.getElementById('sideMenu');
            const overlay = document.getElementById('sideMenuOverlay');
            menu.classList.remove('active');
            overlay.classList.remove('active');
            document.body.style.overflow = '';
        }

        // Close side menu on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeSideMenu();
            }
        });

        // PWA Detection - Toggle UI based on standalone/browser mode
        (function() {
            const isStandalone = window.matchMedia('(display-mode: standalone)').matches
                || window.navigator.standalone
                || document.referrer.includes('android-app://');

            if (isStandalone) {
                document.body.classList.add('pwa-mode');
            } else {
                document.body.classList.add('browser-mode');
            }

            // Listen for display mode changes
            window.matchMedia('(display-mode: standalone)').addEventListener('change', (e) => {
                if (e.matches) {
                    document.body.classList.remove('browser-mode');
                    document.body.classList.add('pwa-mode');
                } else {
                    document.body.classList.remove('pwa-mode');
                    document.body.classList.add('browser-mode');
                }
            });
        })();

        // GS Preloader Logic - Hide after page load, show only once per session
        window.addEventListener('load', function() {
            const preloader = document.getElementById('gsPreloader');
            if (preloader && !sessionStorage.getItem('gs_preloader_shown')) {
                // Wait a bit for visual effect, then hide
                setTimeout(function() {
                    preloader.classList.add('hidden');
                    // Mark as shown for this session
                    sessionStorage.setItem('gs_preloader_shown', 'true');
                    // Remove from DOM after transition
                    setTimeout(function() {
                        preloader.remove();
                    }, 600);
                }, 800);
            } else if (preloader) {
                // Already shown this session, remove immediately
                preloader.remove();
            }
        });
    </script>

