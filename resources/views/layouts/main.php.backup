    <script>
    // Cookie Consent Management
    const CookieConsent = {
        init() {
            if (!this.hasConsent()) {
                setTimeout(() => {
                    document.getElementById('cookieConsent').style.display = 'block';
                }, 1000);
            }
        },
        hasConsent() {
            return document.cookie.includes('gs_consent=');
        },
        getConsent() {
            const match = document.cookie.match(/gs_consent=([^;]+)/);
            return match ? JSON.parse(decodeURIComponent(match[1])) : null;
        }
    };

    function acceptAllCookies() {
        saveCookiePreferences({
            essential: true,
            analytics: true,
            marketing: true,
            personalization: true
        });
    }

    function rejectAllCookies() {
        saveCookiePreferences({
            essential: true,
            analytics: false,
            marketing: false,
            personalization: false
        });
    }

    function saveSelectedCookies() {
        saveCookiePreferences({
            essential: true,
            analytics: document.getElementById('cookieAnalytics').checked,
            marketing: document.getElementById('cookieMarketing').checked,
            personalization: document.getElementById('cookiePersonalization').checked
        });
    }

    function saveCookiePreferences(prefs) {
        // Save to cookie
        const expires = new Date(Date.now() + 365 * 24 * 60 * 60 * 1000).toUTCString();
        document.cookie = `gs_consent=${encodeURIComponent(JSON.stringify(prefs))}; expires=${expires}; path=/; SameSite=Lax`;

        // Send to server
        fetch('/api/consent', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(prefs)
        }).catch(() => {});

        // Hide banner
        document.getElementById('cookieConsent').style.display = 'none';

        // Show PWA prompt after cookie consent
        setTimeout(() => {
            PwaPrompt.checkAndShow();
        }, 30000);
    }

    // PWA Install Prompt
    let deferredPrompt = null;

    window.addEventListener('beforeinstallprompt', (e) => {
        e.preventDefault();
        deferredPrompt = e;
    });

    const PwaPrompt = {
        checkAndShow() {
            if (sessionStorage.getItem('pwa_prompt_closed')) return;
            if (window.matchMedia('(display-mode: standalone)').matches) return;
            if (!CookieConsent.hasConsent()) return;

            document.getElementById('pwaInstallPrompt').style.display = 'block';
            this.showInstructions();
        },
        showInstructions() {
            const ua = navigator.userAgent;
            const isIos = /iPad|iPhone|iPod/.test(ua);
            const isAndroid = /Android/.test(ua);

            if (!deferredPrompt) {
                document.getElementById('pwaInstructions').style.display = 'block';
                document.getElementById('pwaInstallBtn').style.display = 'none';

                if (isIos) {
                    document.getElementById('pwaStepsIos').style.display = 'block';
                } else if (isAndroid) {
                    document.getElementById('pwaStepsAndroid').style.display = 'block';
                } else {
                    document.getElementById('pwaStepsDesktop').style.display = 'block';
                }
            }
        }
    };

    function installPwa() {
        if (deferredPrompt) {
            deferredPrompt.prompt();
            deferredPrompt.userChoice.then((result) => {
                if (result.outcome === 'accepted') {
                    fetch('/api/pwa-installed', { method: 'POST' }).catch(() => {});
                }
                deferredPrompt = null;
                closePwaPrompt();
            });
        }
    }

    function closePwaPrompt() {
        document.getElementById('pwaInstallPrompt').style.display = 'none';
        sessionStorage.setItem('pwa_prompt_closed', 'true');
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
        CookieConsent.init();
    });

    // More Menu Toggle
    function toggleMoreMenu() {
        const overlay = document.getElementById('moreMenuOverlay');
        const menu = document.getElementById('moreMenu');
        const isActive = menu.classList.contains('active');

        if (isActive) {
            closeMoreMenu();
        } else {
            overlay.classList.add('active');
            menu.classList.add('active');
            document.body.style.overflow = 'hidden';
        }
    }

    function closeMoreMenu() {
        const overlay = document.getElementById('moreMenuOverlay');
        const menu = document.getElementById('moreMenu');
        overlay.classList.remove('active');
        menu.classList.remove('active');
        document.body.style.overflow = '';
    }

    // PIN Lock Screen Handler
    (function() {
        const lockScreen = document.getElementById('pinLockScreen');
        if (!lockScreen) return;

        const inputs = lockScreen.querySelectorAll('.pin-lock-digit');
        const errorEl = document.getElementById('pinLockError');
        const errorText = document.getElementById('pinErrorText');

        inputs.forEach((input, index) => {
            input.addEventListener('input', function(e) {
                this.value = this.value.replace(/[^0-9]/g, '');
                if (this.value.length === 1) {
                    this.classList.add('filled');
                    if (index < inputs.length - 1) {
                        inputs[index + 1].focus();
                    } else {
                        // All digits entered, verify PIN
                        verifyPinCode();
                    }
                } else {
                    this.classList.remove('filled');
                }
            });

            input.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && !this.value && index > 0) {
                    inputs[index - 1].focus();
                    inputs[index - 1].value = '';
                    inputs[index - 1].classList.remove('filled');
                }
            });

            input.addEventListener('paste', function(e) {
                e.preventDefault();
                const paste = (e.clipboardData || window.clipboardData).getData('text');
                const digits = paste.replace(/[^0-9]/g, '').slice(0, 6);
                digits.split('').forEach((digit, i) => {
                    if (inputs[i]) {
                        inputs[i].value = digit;
                        inputs[i].classList.add('filled');
                    }
                });
                if (digits.length === 6) verifyPinCode();
            });
        });

        // Focus first input
        inputs[0].focus();

        async function verifyPinCode() {
            let pin = '';
            inputs.forEach(input => pin += input.value);

            if (pin.length !== 6) return;

            try {
                const response = await fetch('/api/verify-pin', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ pin })
                });
                const data = await response.json();

                if (data.success) {
                    lockScreen.style.transition = 'opacity 0.3s';
                    lockScreen.style.opacity = '0';
                    setTimeout(() => lockScreen.remove(), 300);
                } else {
                    showError(data.error || 'Onjuiste PIN');
                    inputs.forEach(input => {
                        input.value = '';
                        input.classList.remove('filled');
                        input.classList.add('error');
                    });
                    setTimeout(() => {
                        inputs.forEach(input => input.classList.remove('error'));
                        inputs[0].focus();
                    }, 500);
                }
            } catch (e) {
                showError('Netwerkfout. Probeer opnieuw.');
            }
        }

        function showError(msg) {
            errorText.textContent = msg;
            errorEl.style.display = 'block';
            setTimeout(() => errorEl.style.display = 'none', 3000);
        }
    })();

    // Pull to Refresh - improved version
    (function() {
        const pullRefresh = document.getElementById('pullRefresh');
        if (!pullRefresh) return;

        let startY = 0;
        let pulling = false;
        let isRefreshing = false;
        const threshold = 80;

        function resetPullRefresh() {
            pulling = false;
            if (!isRefreshing) {
                pullRefresh.classList.remove('visible');
                pullRefresh.querySelector('span').textContent = 'Trek naar beneden...';
            }
        }

        document.addEventListener('touchstart', function(e) {
            if (isRefreshing) return;
            if (window.scrollY <= 0) {
                startY = e.touches[0].pageY;
                pulling = true;
            }
        }, { passive: true });

        document.addEventListener('touchmove', function(e) {
            if (!pulling || isRefreshing) return;

            const currentY = e.touches[0].pageY;
            const diff = currentY - startY;

            // Only show if scrolled to top and pulling down
            if (diff > 20 && window.scrollY <= 0) {
                pullRefresh.classList.add('visible');
                if (diff > threshold) {
                    pullRefresh.querySelector('span').textContent = 'Laat los om te verversen';
                } else {
                    pullRefresh.querySelector('span').textContent = 'Trek naar beneden...';
                }
            } else if (diff < 0 || window.scrollY > 0) {
                // Scrolling up or page scrolled - hide
                pullRefresh.classList.remove('visible');
            }
        }, { passive: true });

        document.addEventListener('touchend', function(e) {
            if (!pulling || isRefreshing) return;

            const endY = e.changedTouches[0].pageY;
            const diff = endY - startY;

            if (pullRefresh.classList.contains('visible') && diff > threshold) {
                isRefreshing = true;
                pullRefresh.classList.add('refreshing');
                pullRefresh.querySelector('span').textContent = 'Verversen...';
                setTimeout(() => {
                    location.reload();
                }, 400);
            } else {
                resetPullRefresh();
            }
        }, { passive: true });

        // Handle touch cancel
        document.addEventListener('touchcancel', resetPullRefresh, { passive: true });

        // Failsafe: hide after 3 seconds if still visible and not refreshing
        setInterval(() => {
            if (pullRefresh.classList.contains('visible') && !isRefreshing && !pulling) {
                pullRefresh.classList.remove('visible');
            }
        }, 3000);
    })();

    // PIN Lock on app reopen - check if user was away
    (function() {
        const PIN_TIMEOUT = 5 * 60 * 1000; // 5 minutes
        const lastActivity = localStorage.getItem('gs_last_activity');
        const now = Date.now();

        // Update last activity on any interaction
        function updateActivity() {
            localStorage.setItem('gs_last_activity', Date.now().toString());
        }

        // Check if PIN should be required (user was away)
        if (lastActivity && (now - parseInt(lastActivity)) > PIN_TIMEOUT) {
            // User was away for more than 5 minutes - require PIN re-verification
            // This is handled server-side, but we can trigger a session check
            fetch('/api/verify-pin', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ check_session: true })
            }).catch(() => {});
        }

        // Track activity
        document.addEventListener('touchstart', updateActivity, { passive: true });
        document.addEventListener('click', updateActivity, { passive: true });
        document.addEventListener('visibilitychange', function() {
            if (document.visibilityState === 'visible') {
                // App became visible - check if we need PIN
                const lastAct = localStorage.getItem('gs_last_activity');
                if (lastAct && (Date.now() - parseInt(lastAct)) > PIN_TIMEOUT) {
                    // Reload to trigger server-side PIN check
                    location.reload();
                }
            } else {
                updateActivity();
            }
        });

        updateActivity(); // Initial activity mark
    })();

    // Install App Modal Functions
    function showInstallApp() {
        closeMoreMenu(); // Close the more menu first

        const overlay = document.getElementById('installModalOverlay');
        const modal = document.getElementById('installModal');
        const installBtn = document.getElementById('installModalBtn');
        const iosSteps = document.getElementById('installIosSteps');
        const alreadyInstalled = document.getElementById('installAlready');
        const menuBtn = document.getElementById('installAppBtn');

        // Check if already installed (PWA standalone mode)
        if (window.matchMedia('(display-mode: standalone)').matches || window.navigator.standalone === true) {
            installBtn.style.display = 'none';
            iosSteps.style.display = 'none';
            alreadyInstalled.style.display = 'flex';
        } else {
            alreadyInstalled.style.display = 'none';

            // Check if iOS
            const isIos = /iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream;

            if (isIos) {
                // iOS: Show instructions (no automatic install available)
                installBtn.style.display = 'none';
                iosSteps.style.display = 'block';
            } else if (deferredPrompt) {
                // Android/Chrome: Can install automatically
                installBtn.style.display = 'flex';
                iosSteps.style.display = 'none';
            } else {
                // Browser doesn't support install prompt - show generic message
                installBtn.innerHTML = '<i class="fas fa-info-circle"></i> Gebruik browser menu';
                installBtn.style.display = 'flex';
                installBtn.onclick = function() {
                    alert('Open het browserMenu () en kies "Toevoegen aan startscherm" of "App installeren".');
                };
                iosSteps.style.display = 'none';
            }
        }

        // Show modal
        setTimeout(() => {
            overlay.classList.add('active');
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }, 100);
    }

    function closeInstallModal() {
        const overlay = document.getElementById('installModalOverlay');
        const modal = document.getElementById('installModal');
        overlay.classList.remove('active');
        modal.classList.remove('active');
        document.body.style.overflow = '';
    }

    function triggerInstall() {
        if (deferredPrompt) {
            deferredPrompt.prompt();
            deferredPrompt.userChoice.then((result) => {
                if (result.outcome === 'accepted') {
                    // Track installation
                    fetch('/api/pwa-installed', { method: 'POST' }).catch(() => {});

                    // Show success state
                    const installBtn = document.getElementById('installModalBtn');
                    const alreadyInstalled = document.getElementById('installAlready');
                    installBtn.style.display = 'none';
                    alreadyInstalled.style.display = 'flex';
                }
                deferredPrompt = null;
            });
        }
    }

    // Hide install button if already in standalone mode
    document.addEventListener('DOMContentLoaded', function() {
        if (window.matchMedia('(display-mode: standalone)').matches || window.navigator.standalone === true) {
            const installBtn = document.getElementById('installAppBtn');
            if (installBtn) {
                installBtn.style.display = 'none';
            }
        }

        // Initialize push notifications
        initPushNotifications();
    });

    // Push Notification Functions
    async function initPushNotifications() {
        if (!('serviceWorker' in navigator) || !('PushManager' in window)) {
            console.log('Push notifications not supported');
            return;
        }

        try {
            // Register service worker
            const registration = await navigator.serviceWorker.register('/sw.js');
            console.log('Service Worker registered');

            // Check if user is logged in and hasn't been asked yet
            const isLoggedIn = <?= isset($_SESSION['user_id']) ? 'true' : 'false' ?>;
            const pushAsked = localStorage.getItem('gs_push_asked');

            if (isLoggedIn && !pushAsked && Notification.permission === 'default') {
                // Show push notification prompt after 30 seconds
                setTimeout(() => {
                    showPushPrompt();
                }, 30000);
            }

            // If permission already granted, ensure subscription
            if (Notification.permission === 'granted') {
                await subscribeToPush(registration);
            }
        } catch (error) {
            console.error('Service Worker registration failed:', error);
        }
    }

    function showPushPrompt() {
        const prompt = document.createElement('div');
        prompt.id = 'pushPrompt';
        prompt.innerHTML = `
            <div class="push-prompt-overlay" onclick="closePushPrompt()"></div>
            <div class="push-prompt-modal">
                <div class="push-prompt-icon"><i class="fas fa-bell"></i></div>
                <h3>Meldingen Inschakelen</h3>
                <p>Ontvang herinneringen voor je afspraken zodat je niets mist!</p>
                <div class="push-prompt-buttons">
                    <button class="push-prompt-btn-yes" onclick="enablePushNotifications()">
                        <i class="fas fa-check"></i> Ja, graag!
                    </button>
                    <button class="push-prompt-btn-no" onclick="closePushPrompt()">Later</button>
                </div>
            </div>
        `;
        document.body.appendChild(prompt);
    }

    function closePushPrompt() {
        const prompt = document.getElementById('pushPrompt');
        if (prompt) prompt.remove();
        localStorage.setItem('gs_push_asked', '1');
    }

    async function enablePushNotifications() {
        closePushPrompt();
        try {
            const permission = await Notification.requestPermission();
            if (permission === 'granted') {
                const registration = await navigator.serviceWorker.ready;
                await subscribeToPush(registration);
                showToast('Meldingen ingeschakeld!', 'success');
            }
        } catch (error) {
            console.error('Failed to enable push:', error);
        }
    }

    async function subscribeToPush(registration) {
        try {
            const response = await fetch('/api/push/vapid-key');
            const { publicKey } = await response.json();
            if (!publicKey) return;

            const applicationServerKey = urlBase64ToUint8Array(publicKey);
            const subscription = await registration.pushManager.subscribe({
                userVisibleOnly: true,
                applicationServerKey: applicationServerKey
            });

            await fetch('/api/push/subscribe', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(subscription.toJSON())
            });
        } catch (error) {
            console.error('Failed to subscribe:', error);
        }
    }

    function urlBase64ToUint8Array(base64String) {
        const padding = '='.repeat((4 - base64String.length % 4) % 4);
        const base64 = (base64String + padding).replace(/\-/g, '+').replace(/_/g, '/');
        const rawData = window.atob(base64);
        const outputArray = new Uint8Array(rawData.length);
        for (let i = 0; i < rawData.length; ++i) {
            outputArray[i] = rawData.charCodeAt(i);
        }
        return outputArray;
    }

    function showToast(message, type = 'info') {
        const toast = document.createElement('div');
        toast.className = 'toast';
        toast.innerHTML = `<i class="fas fa-${type === 'success' ? 'check-circle' : 'info-circle'}"></i> ${message}`;
        toast.style.cssText = `position:fixed;bottom:100px;left:50%;transform:translateX(-50%);background:${type === 'success' ? '#D4AF37' : '#404040'};color:white;padding:0.75rem 1.25rem;border-radius:10px;z-index:100010;display:flex;align-items:center;gap:0.5rem;font-size:0.9rem;box-shadow:0 4px 15px rgba(0,0,0,0.2);`;
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 3000);
    }
    </script>
