# ═══════════════════════════════════════════════════════════════════════════════
# GLAMOURSCHEDULE ENVIRONMENT CONFIGURATIE
# ═══════════════════════════════════════════════════════════════════════════════
# Copy this file to .env and fill in your values

APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=glamourschedule_db
DB_USERNAME=
DB_PASSWORD=

# Mollie Payment
MOLLIE_API_KEY=

# Mollie Connect (OAuth for automatic payouts)
MOLLIE_CLIENT_ID=
MOLLIE_CLIENT_SECRET=

# Bunq API (for automated IBAN payouts)
BUNQ_API_KEY=
BUNQ_ACCOUNT_ID=
BUNQ_SANDBOX=true

# Email (SMTP)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@glamourschedule.com
MAIL_FROM_NAME="GlamourSchedule"

# Google Maps
GOOGLE_MAPS_API_KEY=

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Security
APP_KEY=

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# SMS (MessageBird)
MESSAGEBIRD_API_KEY=
MESSAGEBIRD_ORIGINATOR=GlamourSched

# OpenAI API (Glamori AI Assistant)
OPENAI_API_KEY=

# Stripe (International payments)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Wise (TransferWise) API for international payouts
WISE_API_KEY=
WISE_PROFILE_ID=
WISE_SANDBOX=true
